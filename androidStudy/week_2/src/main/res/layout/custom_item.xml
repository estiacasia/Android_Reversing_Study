<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ImageView
		android:id="@+id/custom_item_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/circle_background"
		android:src="@drawable/ic_person"/>
	<TextView
		android:id="@+id/custom_item_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/custom_item_image"
		android:layout_marginLeft="16dp"/>
	<TextView
		android:id="@+id/custom_item_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/custom_item_name"
		android:layout_alignLeft="@id/custom_item_name"/>
	<ImageView
		android:id="@+id/custom_item_call"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:src="@drawable/ic_dialer"/>
</RelativeLayout>